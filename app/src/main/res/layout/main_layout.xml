<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/pollacks" />

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center">

      <LinearLayout
          style="@style/SelectableItemBackground"
          android:orientation="horizontal"
          android:layout_width="@dimen/area_button_width"
          android:layout_height="@dimen/area_button_height"
          android:clickable="true"
          android:onClick="onLinearLayoutClick"
          android:gravity="center"
          android:baselineAligned="false"
          android:layout_marginBottom="@dimen/area_button_margin"
          android:backgroundTint="@android:color/background_light"
          android:weightSum="1">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="FooBar"
             android:textSize="30sp"
             android:textColor="@android:color/primary_text_light" />

         <RatingBar
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/ratingBar3"
             android:layout_weight="1"
             android:numStars="5"
             android:rating="4" />

      </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="@dimen/area_button_width"
          android:layout_height="@dimen/area_button_height"
          android:clickable="true"
          android:gravity="center"
          android:background="@color/area_button_background"
          android:layout_marginBottom="@dimen/area_button_margin">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="FooBar"
             android:textSize="30sp"
             android:textColor="@android:color/primary_text_light" />

         <RatingBar
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/ratingBar2"
             android:layout_weight="1"
             android:numStars="5"
             android:rating="3" />
      </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="@dimen/area_button_width"
          android:layout_height="@dimen/area_button_height"
          android:clickable="true"
          android:gravity="center"
          android:background="@color/area_button_background">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="FooBar"
             android:textSize="30sp"
             android:textColor="@android:color/primary_text_light" />

         <RatingBar
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/ratingBar4"
             android:layout_weight="1"
             android:numStars="5"
             android:rating="5" />
      </LinearLayout>
   </LinearLayout>

</FrameLayout>

