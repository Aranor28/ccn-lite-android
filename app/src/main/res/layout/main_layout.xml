<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

   <!-- The main content view -->
   <RelativeLayout
       android:id="@+id/mainContent"
       android:layout_width="match_parent"
       android:layout_height="match_parent" >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:background="#991b0d"
           android:id="@+id/relativeLayout">

           <ImageView android:layout_width="200sp"
               android:layout_height="50sp"
               android:layout_gravity="center"
               android:paddingTop="15dp"
               android:src="@drawable/ccn_lite_logo_712x184_tmp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="14dp"
               android:id="@+id/imageViewMenu" />
       </RelativeLayout>

       <TextView
           android:text="Content Objects"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/textView"
           android:textColor="@android:color/black"
           android:textStyle="normal|bold"
           android:layout_marginTop="38dp"
           android:layout_below="@+id/relativeLayout"
           android:layout_toStartOf="@+id/sendButton" />

       <Spinner
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/test_example"
           android:layout_below="@+id/textView"
           android:layout_alignStart="@+id/resultTitleTextView" />
       <Button
           android:text="Send Interest Message"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/sendButton"
           android:onClick="sendInterest"
           android:layout_below="@+id/test_example"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="36dp" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/resultTextView"
           android:textSize="18sp"
           android:scrollbars = "vertical"
           android:maxLines="7"
           android:layout_weight="1.12"
           android:background="#eeeaf1"
           android:layout_below="@+id/resultTitleTextView"
           android:layout_alignStart="@+id/textView" />

       <TextView
           android:text="Result:"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/resultTitleTextView"
           android:textColor="@android:color/black"
           android:textSize="18sp"
           android:layout_marginTop="62dp"
           android:layout_below="@+id/sendButton"
           android:layout_alignEnd="@+id/textView" />


       </RelativeLayout>

   <!-- The navigation drawer -->
   <RelativeLayout
       android:layout_width="280dp"
       android:layout_height="match_parent"
       android:id="@+id/drawerPane"
       android:layout_gravity="start">

      <!-- Profile Box -->

      <RelativeLayout
          android:id="@+id/profileBox"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="#991b0d"
          android:padding="8dp" >

         <ImageView
             android:id="@+id/avatar"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginTop="15dp" />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="42dp"
             android:layout_centerVertical="true"
             android:layout_marginLeft="15dp"
             android:layout_toRightOf="@+id/avatar"
             android:orientation="vertical" >

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCN"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:text="CS Project 2016"
                android:textColor="#fff"
                android:textSize="12sp" />
         </LinearLayout>
      </RelativeLayout>



      <!-- List of Actions (pages) -->
      <ListView
          android:id="@+id/navList"
          android:layout_width="280dp"
          android:layout_height="match_parent"
          android:layout_below="@+id/profileBox"
          android:choiceMode="singleChoice"
          android:background="#ffffffff" />

   </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


